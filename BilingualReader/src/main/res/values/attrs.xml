<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FuriganaView">
        <attr name="android:text" />
        <attr name="android:maxLines" />
        <attr name="android:textAlignment" />
        <attr name="android:lineSpacingExtra" />
        <attr name="android:layout_marginEnd" />
        <attr name="android:layout_marginLeft" />
        <attr name="android:layout_marginRight" />
        <attr name="android:layout_marginStart" />
        <attr name="furiganaSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FloatingWindowOcr">
        <attr name="android:layout_margin" format="dimension"  />
        <attr name="android:background" />
    </declare-styleable>

    <bool name="isTablet">false</bool>

    <declare-styleable name="PageLinkButtons">
        <attr name="state_expanded" format="boolean" />
    </declare-styleable>

    <attr name="state" format="enum">
        <enum name="unchecked" value="0" />
        <enum name="indeterminate" value="1" />
        <enum name="checked" value="2" />
    </attr>

    <declare-styleable name="TriStateCheckBox">
        <attr name="state" />
        <attr name="state_unchecked" format="boolean" />
        <attr name="state_indeterminate" format="boolean" />
        <attr name="state_checked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DottedSeekBar">
        <attr name="dots_positions" format="reference"/>
        <attr name="dots_drawable" format="reference"/>
    </declare-styleable>
</resources>