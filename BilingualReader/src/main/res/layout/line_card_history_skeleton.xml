<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_skeleton_height"
    android:layout_marginBottom="@dimen/history_skeleton_item_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/history_skeleton_card_image_width"
            android:layout_height="@dimen/history_skeleton_card_image_height"
            android:layout_marginStart="6dp"
            android:background="@drawable/skeleton"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/history_skeleton_item_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/history_skeleton_item_height"
                    android:layout_height="@dimen/history_skeleton_item_height"
                    android:layout_marginEnd="@dimen/history_skeleton_item_margin"
                    android:background="@drawable/skeleton"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_skeleton_item_height"
                    android:layout_marginStart="@dimen/history_skeleton_item_margin"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/skeleton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/history_skeleton_item_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:layout_weight="2"
                        android:layout_marginEnd="@dimen/history_skeleton_item_margin"
                        android:background="@drawable/skeleton"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:layout_weight="1.2"
                        android:layout_marginStart="@dimen/history_skeleton_item_margin"
                        android:layout_marginEnd="@dimen/history_skeleton_item_margin"
                        android:background="@drawable/skeleton"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:layout_weight="0.5"
                        android:layout_marginStart="@dimen/history_skeleton_item_margin"
                        android:layout_marginEnd="@dimen/history_skeleton_item_margin"
                        android:background="@drawable/skeleton"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:layout_weight="1.2"
                        android:layout_marginStart="@dimen/history_skeleton_item_margin"
                        android:background="@drawable/skeleton"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/history_skeleton_item_margin">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:background="@drawable/skeleton"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="2dp"/>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="@dimen/history_skeleton_item_height"
                        android:background="@drawable/skeleton"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_skeleton_item_margin"/>
</LinearLayout>