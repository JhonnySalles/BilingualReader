<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_activity_manga_reader">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/AppBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.ui.reader.manga.MangaReaderActivity">

        <FrameLayout
            style="@style/AppBackground.Reader"
            android:id="@+id/root_frame_manga_reader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"/>

        <include
            android:id="@+id/reader_manga_container_touch_demonstration"
            layout="@layout/reader_manga_touch_demonstration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarReaderCenter="@{true}"
            layout="@layout/reader_manga_content"/>

        <FrameLayout
            android:id="@+id/popup_menu_translate"
            style="@style/AppBackground.Popup"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/popup_menu_translate_touch"
                style="@style/TextTitle.Popup"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:contentDescription="@string/popup_reading_manga_open"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_line_popup"/>

            <ImageView
                android:id="@+id/popup_menu_translate_close"
                style="@style/TextTitle.Popup"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="1dp"
                android:contentDescription="@string/popup_reading_manga_close"
                android:scaleType="center"
                android:src="@drawable/ic_close"/>

            <ImageView
                android:id="@+id/popup_menu_translate_floating_touch"
                style="@style/TextTitle.Popup"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="start|top"
                android:layout_marginTop="1dp"
                android:contentDescription="@string/popup_reading_manga_floating_popup"
                android:scaleType="center"
                android:src="@drawable/ico_animated_floating_window"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/popup_translate_tab"
                    style="@style/PopupTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabPaddingBottom="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingTop="0dp">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_item_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_reading_manga_tab_item_subtitle" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_item_vocabulary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_reading_manga_tab_item_subtitle_vocabulary" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_item_file_import"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_reading_manga_tab_item_subtitle_import" />

                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/popup_translate_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/popup_menu_color"
            style="@style/AppBackground.Popup"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:id="@+id/popup_menu_color_touch"
                style="@style/TextTitle.Popup"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:contentDescription="@string/popup_reading_manga_open"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_line_popup"/>

            <ImageView
                android:id="@+id/popup_menu_color_close"
                style="@style/TextTitle.Popup"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="1dp"
                android:contentDescription="@string/popup_reading_manga_close"
                android:scaleType="center"
                android:src="@drawable/ic_close"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/popup_color_tab"
                    style="@style/PopupTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabPaddingBottom="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingTop="0dp">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_item_brightness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_reading_manga_tab_item_brightness" />

                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/popup_color_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
            </LinearLayout>
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>