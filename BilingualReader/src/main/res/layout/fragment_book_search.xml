<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppBackground.Reader"
    android:id="@+id/frame_book_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".view.ui.book.BookSearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/AppBackground.Reader"
        android:id="@+id/book_search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            style="@style/AppBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/margin"
            android:orientation="horizontal"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_toolbar_book_search">
            <LinearLayout
                android:id="@+id/book_search_history_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_small"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:text="@string/book_search_history_title"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_search_history_clear"
                        style="@style/ButtonWithoutBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:contentDescription="@string/book_search_history_clear"
                        android:text="@string/book_search_history_clear"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorPrimary"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/book_search_history_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="@dimen/book_search_list_padding"
                    android:minHeight="@dimen/book_search_list_min_height"
                    android:divider="@drawable/line_list_divider_small"
                    android:dividerHeight="1dp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/book_search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clipToPadding="false"
            android:columnCount="1"
            android:layoutAnimation="@anim/layout_animation_library_line"
            android:paddingBottom="@dimen/book_search_list_padding"
            android:scrollbars="vertical"
            android:background="?attr/colorSurfaceBright"
            android:visibility="gone"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_toolbar_book_search"/>

        <com.google.android.material.appbar.AppBarLayout
            style="@style/AppBackground.Accent"
            android:id="@+id/content_toolbar_book_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/MainToolbarContentTheme.NoElevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_book_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_navigator_header_size"
                android:background="@android:color/transparent"
                android:titleMarginStart="10dp"
                app:popupTheme="@style/MainToolbarStyle"
                style="@style/MainToolbarThemeWithShadow">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/book_search_progress_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="start"
                    android:layout_width="@dimen/book_search_button_progress"
                    android:layout_height="@dimen/book_search_button_progress"
                    android:theme="@style/Theme.MangaReader"
                    android:translationX="-10dp">
                    <ProgressBar
                        android:id="@+id/book_search_in_progress"
                        style="@style/RoundedProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/book_search_stop"
                        style="@style/Button.IconOnly"
                        android:layout_width="@dimen/book_search_button_progress"
                        android:layout_height="@dimen/book_search_button_progress"
                        android:textColor="?attr/colorPrimaryContainer"
                        android:contentDescription="@string/book_search_stop"
                        app:iconSize="15dp"
                        app:iconTint="?attr/colorPrimaryContainer"
                        app:icon="@drawable/ico_close" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/book_search_scroll_up"
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/book_search_scrolling_button_margin"
            android:contentDescription="@string/action_scroll_up"
            android:src="@drawable/ico_animated_scroll_up"
            android:visibility="gone"
            app:borderWidth="@dimen/book_search_up_border"
            app:fabCustomSize="@dimen/book_search_up_width"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_toolbar_book_search"
            app:maxImageSize="@dimen/book_search_up_image_width" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/book_search_scroll_down"
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/book_search_scrolling_button_margin"
            android:contentDescription="@string/action_scroll_down"
            android:src="@drawable/ico_animated_scroll_down"
            android:visibility="gone"
            app:borderWidth="@dimen/book_search_down_border"
            app:fabCustomSize="@dimen/book_search_down_width"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:maxImageSize="@dimen/book_search_down_image_width" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>