<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_manga_chapters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    style="@style/AppBackground"
    tools:context=".view.ui.chapters.MangaChaptersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manga_chapters_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manga_chapters_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:clipToPadding="false"
            android:columnCount="1"
            android:layoutAnimation="@anim/layout_animation_library_line"
            android:paddingBottom="@dimen/manga_chapters_list_padding"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/content_toolbar_manga_chapter"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:background="?attr/statusBarColor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>

        <com.google.android.material.appbar.AppBarLayout
            style="@style/AppBarLayout"
            android:id="@+id/content_toolbar_manga_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/MainToolbarContentTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_manga_chapter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_navigator_header_size"
                android:gravity="start|center"
                app:popupTheme="@style/MainToolbarStyle"
                style="@style/MainToolbarThemeWithShadow"/>

        </com.google.android.material.appbar.AppBarLayout>

        <!--                                Ended                                -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/manga_chapter_scroll_up"
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/manga_chapters_scrolling_button_margin"
            android:contentDescription="@string/action_scroll_up"
            android:visibility="gone"
            android:src="@drawable/ico_animated_scroll_up"
            app:borderWidth="@dimen/manga_chapters_up_border"
            app:fabCustomSize="@dimen/manga_chapters_up_width"
            app:maxImageSize="@dimen/manga_chapters_up_image_width"
            app:layout_constraintTop_toTopOf="@+id/manga_chapters_recycler_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/manga_chapter_scroll_down"
            style="@style/FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/manga_chapters_scrolling_button_margin"
            android:contentDescription="@string/action_scroll_down"
            android:visibility="gone"
            android:src="@drawable/ico_animated_scroll_down"
            app:borderWidth="@dimen/manga_chapters_down_border"
            app:fabCustomSize="@dimen/manga_chapters_down_width"
            app:maxImageSize="@dimen/manga_chapters_down_image_width"
            app:layout_constraintBottom_toBottomOf="@+id/manga_chapters_recycler_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>