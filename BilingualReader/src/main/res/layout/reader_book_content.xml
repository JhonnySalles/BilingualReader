<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_reader_book_content">
    <data>
        <import type="android.view.View"/>
        <import type="android.view.Gravity" />

        <variable
            name="toolbarReaderCenter"
            type="Boolean" />
    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <include
            android:id="@+id/container_book_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            layout="@layout/reader_book_progress"/>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/reader_book_toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@drawable/main_toolbar_background"
            android:paddingBottom="5dp"
            android:theme="@style/MainToolbarContentTheme"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_book_reader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/MainToolbarStyle"
                android:theme="@style/MainToolbarTheme"/>

            <TextView
                android:id="@+id/reader_book_toolbar_title"
                style="@style/ReaderToolbarTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/title_size"/>

            <TextView
                android:id="@+id/reader_book_toolbar_chapter"
                style="@style/ReaderBookToolbarTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/title_medium_size"/>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/reader_book_toolbar_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:background="@drawable/main_toolbar_background_inverse"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:orientation="vertical"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/reader_book_bottom_progress_title"
                    style="@style/ReaderBookToolbarTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/reader_book_bottom_progress"
                    style="@style/Slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:valueFrom="1F"
                    android:valueTo="100F"
                    android:value="1"
                    android:stepSize="1"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reader_book_toolbar_bottom_author"
                    style="@style/ReaderToolbarTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:layout_marginEnd="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
