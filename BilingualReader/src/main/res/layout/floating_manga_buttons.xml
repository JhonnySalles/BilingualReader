<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_manga_buttons_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_button_content"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_close"
        style="@style/FloatingButton.Actions.Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_page_linked"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_page_linked" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_draw_text"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_draw_text" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_ocr_google_vision"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ocr_google_vision" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_floating_window"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_floating_window" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_file_link"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_link" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/floating_manga_buttons_move_window"
        style="@style/FloatingButton.Actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_floating_button_change_right" />

</LinearLayout>
