<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reader_book_progress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextClock
            android:id="@+id/book_progress_clock"
            style="@style/TextTitle.PageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm:ss a"
            android:padding="2dp"
            android:text="4:50"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/book_progress_text"
            style="@style/TextTitle.PageNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="O GENERAL - 16 / 185"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/book_progress_battery"
            style="@style/TextTitle.PageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="2dp"
            android:text="100%"
            android:textSize="12dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/book_progress_bar"
        style="@style/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:progress="50" />

</LinearLayout>